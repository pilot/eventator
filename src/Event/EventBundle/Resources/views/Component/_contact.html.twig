{% form_theme form 'EventEventBundle::form_theme.html.twig' %}

<hr id="contact" class="featurette-divider">
<h2 class="featurette-heading">Contact Us</h2>

<div class="row">
    <div class="col-lg-7">
        <fieldset>
            <form id="contact" action="{{ url('event_component_contact') }}" method="post" {{ form_enctype(form) }}>
                {{ form_widget(form) }}

                {{ form_rest(form) }}

                <button class="btn btn-default" type="submit">{{ 'Send'|trans }}</button>
            </form>
        </fieldset>
    </div>
    <div class="col-lg-5">
        <p>
            <h3>{{ 'Find Us'|trans }}</h3>
            {% if event.twitter %}
                <a href="http://twitter.com/{{ event.twitter }}">twitter</a>
            {% endif %}
            {% if event.facebook %}
                <a href="{{ event.facebook }}">facebook</a>
            {% endif %}
            {% if event.google %}
                <a href="{{ event.google }}">google+</a>
            {% endif %}
        </p>

        <p class="lead">{{ event.contact|raw }}</p>
    </div>
</div>
